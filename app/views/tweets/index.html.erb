<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Password</th>
      <th>Cover photo</th>
      <th>Profile picture</th>
      <th>Location</th>
      <th>Private</th>
      <th>Bio</th>
      <th>Website</th>
      <th>Timezone</th>
      <th>Language</th>
      <th>Phone</th>
      <th>Verified</th>
      <th>Name</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.cover_photo %></td>
        <td><%= user.profile_picture %></td>
        <td><%= user.location %></td>
        <td><%= user.private %></td>
        <td><%= user.bio %></td>
        <td><%= user.website %></td>
        <td><%= user.timezone %></td>
        <td><%= user.language %></td>
        <td><%= user.phone %></td>
        <td><%= user.verified %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% unless current_user.following?(user) %>
        <td><%= link_to 'Follow', follow_user_path(user), method: :post %></td>
        <% else %>
        <td><%= link_to 'Unfollow', unfollow_user_path(user), method: :delete %></td>
        <% end %>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

